<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Lab12</display-name>
  <welcome-file-list>
     <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>searchServlet</servlet-name>
  	<servlet-class>com.jlcindia.servlet.SearchBookServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>searchServlet</servlet-name>
  	<url-pattern>/searchbooks.jlc</url-pattern>
  </servlet-mapping>
  
 
  <servlet>
  		<servlet-name>addToCartServlet</servlet-name>
  		<servlet-class>com.jlcindia.servlet.AddToCartServlet</servlet-class>
  </servlet>
 
 <servlet-mapping>
 		<servlet-name>addToCartServlet</servlet-name>
  		<url-pattern>/addtocart.jlc</url-pattern>
 </servlet-mapping>
  
  <servlet>
  		<servlet-name>showCartServlet</servlet-name>
  		<servlet-class>com.jlcindia.servlet.ShowCartServlet</servlet-class>
  </servlet>

<servlet-mapping>
 		<servlet-name>showCartServlet</servlet-name>
  		<url-pattern>/showcart.jlc</url-pattern>
 </servlet-mapping>
 
 
 
 <servlet>
  		<servlet-name>removeFromCart</servlet-name>
  		<servlet-class>com.jlcindia.servlet.RemoveFromCartServlet</servlet-class>
  </servlet>

<servlet-mapping>
 		<servlet-name>removeFromCart</servlet-name>
  		<url-pattern>/removefromcart.jlc</url-pattern>
 </servlet-mapping>
</web-app>